<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/recipeTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Tytuł przepisu" />

    <!-- Kontener na dynamicznie dodawane składniki -->
    <LinearLayout
        android:id="@+id/ingredientsContainer"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical">

        <!-- Tutaj jest pierwszy, statyczny zestaw składników -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/recipeIngredients"
                android:layout_width="202dp"
                android:layout_height="match_parent"
                android:hint="Składniki"
                android:inputType="textMultiLine"
                android:lines="4" />

            <EditText
                android:id="@+id/amountEditText"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="ilość"
                android:inputType="text" />

            <EditText
                android:id="@+id/unitEditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="jednkostka"
                android:inputType="text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addButton"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:text="+" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="x" />
    </LinearLayout>

    <EditText
        android:id="@+id/recipeInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Instrukcje"
        android:inputType="textMultiLine"
        android:lines="6" />

    <Button
        android:id="@+id/saveRecipeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zapisz Przepis" />

</LinearLayout>